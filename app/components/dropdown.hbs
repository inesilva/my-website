<div class='dropdown'>
  <button
    class='dropdown-button {{if this.open "focus"}}' type="button" {{on 'click' this.dropdown}}
  >

    {{@title}}
    <img class='dropdown-icon {{if this.open "focus"}}' />
  </button>
  <div class='dropdown-list {{if this.open "show"}}'>
    {{yield}}
  </div>
</div>